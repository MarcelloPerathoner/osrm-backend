{
    "version": 3,
    "vendor": {
        "OSRM": {}
    },
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "$name",
            "displayName": "'$name' config",
            "description": "'$name' configure preset",
            "binaryDir": "$binary_dir"
        }
    ],
    "buildPresets": [
        {
            "name": "$name",
            "configurePreset": "$name",
            "configuration": "$config",
            "jobs": $jobs
        }
    ],
    "testPresets": [
        {
            "name": "$name",
            "configurePreset": "$name",
            "configuration": "$config",
            "execution": {
                "jobs": $jobs
            }
        }
    ]
}
